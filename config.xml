<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.whatsignals.start"
        version   = "1.4.0">

        <!-- LEMBRAR DE MUDAR O APP ID ANTES DE SUBIR O APP NAS LOJAS -->

    <name>Start Sonhos</name>

    <description>
        Aplicativo oficial da Start
    </description>

    <author href="https://www.startsonhos.com/" email="ajuda@startsonhos.com">
        SIMPRESAS LIVROS DIGITAIS
